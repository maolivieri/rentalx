{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "rootDir": "./",
        "baseUrl": "./src",
        "paths": {
            "@modules/*": ["modules/*"],
            "@config/*": ["config/*"],
            "@utils/*": ["utils/*"],
            "@shared/*": ["shared/*"],
            "@errors/*": ["shared/errors/*"]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    }
}
